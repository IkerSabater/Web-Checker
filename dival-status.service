[Unit]
Description=Dival Active Detector
After=network.target

[Service]
ExecStart=/usr/bin/xvfb-run --auto-servernum --server-args="-screen 0 1920x1080x24" /usr/bin/python3 /home/iker/Documentos/Web-Checker/web-status-checker.py
WorkingDirectory=/home/iker/Documentos/Web-Checker/
StandardOutput=inherit
StandardError=inherit
Environment="DISPLAY=:0"
Environment="DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus"
Restart=always
User=iker

[Install]
WantedBy=multi-user.target
